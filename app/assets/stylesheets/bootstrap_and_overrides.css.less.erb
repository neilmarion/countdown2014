body {
  font-family: 'Roboto Condensed', sans-serif;
  background: url("https://dl.dropboxusercontent.com/u/5938276/photos/countdown2014/image<%= rand(4) + 1 %>_bg.jpg") no-repeat center;
  background-size: 100%;
}

.share_buttons {
  margin-top: 128px;
  text-align: center;
}

#countdown {
  margin-top: 256px;
  text-align: center;
  font-size: 19em;
  color: #fff;
}

#label {
  margin-top: 128px;
  text-align: center;
  font-size: 4em;
  color: #fff;
}

#label span {
  padding-left:15px;
  padding-right:15px;
}

#footer {
  margin-top: 10px;
  text-align: center;
  color: #fff;
}

.alert {
  text-align: center;
  position: absolute;
  margin-top: 20px;
}

.btn-custom {
  background-color: hsl(227, 49%, 51%) !important;
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#445fbf", endColorstr="#445fbf");
  background-image: -khtml-gradient(linear, left top, left bottom, from(#445fbf), to(#445fbf));
  background-image: -moz-linear-gradient(top, #445fbf, #445fbf);
  background-image: -ms-linear-gradient(top, #445fbf, #445fbf);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #445fbf), color-stop(100%, #445fbf));
  background-image: -webkit-linear-gradient(top, #445fbf, #445fbf);
  background-image: -o-linear-gradient(top, #445fbf, #445fbf);
  background-image: linear-gradient(#445fbf, #445fbf);
  border-color: #445fbf #445fbf hsl(227, 49%, 51%);
  color: #fff !important;
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.00);
  -webkit-font-smoothing: antialiased;
}
